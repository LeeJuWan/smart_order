<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="700"
        app:scale_base_width="300">

        <!--관리자로 접속 하는 버튼-->
        <Button
            android:id="@+id/admin_Flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="130"
            app:scale_height="100"
            app:scale_left="10"
            app:scale_textsize="15"
            app:scale_top="170"
            android:text="관리자 전용"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!--손님으로 접속 하는 버튼-->
        <Button
            android:id="@+id/customer_Flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="130"
            app:scale_height="100"
            app:scale_left="160"
            app:scale_textsize="15"
            app:scale_top="170"
            android:text="손님 전용"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_width="270"
            app:scale_height="100"
            app:scale_left="10"
            app:scale_textsize="12"
            app:scale_top="390"
            android:text="손님 전용 사용 시 로그인이 필요하지 않습니다."
            android:textSize="18sp"
            android:textStyle="bold"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>